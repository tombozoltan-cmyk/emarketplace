rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Blog images - authenticated users can upload
    match /image/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Contract templates (Word documents)
    match /contract-templates/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Contract documents - authenticated users can upload
    match /contracts/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Contract wizard document uploads
    match /contract-documents/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
